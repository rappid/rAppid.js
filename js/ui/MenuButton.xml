<?xml version="1.0"?>
<ui:MenuButtonClass xmlns="http://www.w3.org/1999/xhtml" xmlns:js="js.core" xmlns:ui="js.ui">
    <js:Template name="layout">
        <ui:Button class="dropdown-toggle" componentClass="{buttonClass}" iconLabel="{iconLabel}" labelClass="{labelClass}"
                tabindex="{tabIndex}" title="{title}">
            <js:Template name="layout">
                <ui:PlaceHolder name="icon"/><span class="{labelClass}">{label} </span>
                <span class="caret"/>
            </js:Template>
        </ui:Button>
        <ui:ContentPlaceHolder tagName="div" name="menu" class="{menuClassName}" onclick="_preventDefault"/>
    </js:Template>
</ui:MenuButtonClass>