<?xml version="1.0"?>
<ui:SelectClass xmlns="http://www.w3.org/1999/xhtml" xmlns:js="js.core" xmlns:ui="js.ui">
    <a cid="selector" onclick="_handleSelect" onkeydown="_handleKey" class="select-choice">
        <span visible="{selectedItem}" class="selected-item-container" initializeInvisibleChildren="true">
        <ui:PlaceHolder name="selectedItem"/>
        </span>
        <span visible="{not(selectedItem)}" initializeInvisibleChildren="true">
        <ui:PlaceHolder name="emptySelection"/>
        </span>
        <abbr visible="{selectedItem}" onclick="_clearSelection"/>
        <div class="select-icon">
            <b/>
        </div>
    </a>
    <div class="select-drop" onclick="_onContainerSelect">
        <div class="select-search">
            <input type="text" cid="inputField" value="{{searchTerm}}" onkeydown="_onKeyDown" placeholder="{searchPlaceHolder}"/>
        </div>
        <ui:TileList
                cid="tileList"
                onclick="_onListClick"
                onkeyup="_onEnter"
                class="select-results"
                scrollContainerClass="nav nav-pills nav-stacked"
                cols="1" data="{_tileListData}"
                heightUpdatePolicy="out"
                widthUpdatePolicy="in"
                verticalGap="0"
                height="{dropDownHeight}" itemHeight="{itemHeight}" itemWidth="auto" selectionMode="single">

        </ui:TileList>
    </div>
    <js:Template name="selectedItem">
        <span>
            {item.name}
        </span>
    </js:Template>
    <js:Template name="renderer">
        <span>
            {item}
        </span>
    </js:Template>
    <js:Template name="emptySelection">
        <span>
            {placeHolder}
        </span>
    </js:Template>
</ui:SelectClass>